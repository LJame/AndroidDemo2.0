<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hardrubic.activity.HorizontalScrollActivity"
    android:background="@color/lightslategray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/card_province"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/green"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">
            <ListView
                android:id="@+id/lv_province"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:visibility="gone"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">
            <ListView
                android:id="@+id/lv_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_region"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/pink"
            android:visibility="gone"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">
            <ListView
                android:id="@+id/lv_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_street"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:visibility="gone"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">
            <ListView
                android:id="@+id/lv_street"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</HorizontalScrollView>
